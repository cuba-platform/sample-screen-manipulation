<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.company.sample.web.order.OrderEdit"
        datasource="orderDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.sample.web.order">
    <dsContext>
        <datasource id="orderDs"
                    class="com.company.sample.entity.Order"
                    view="order-edit">
            <collectionDatasource id="orderLinesDs"
                                  property="orderLines"/>
        </datasource>
    </dsContext>
    <layout expand="orderLinesBox"
            spacing="true">
        <hbox spacing="true">
            <fieldGroup id="fieldGroup"
                        datasource="orderDs">
                <column width="200px">
                    <field id="date"/>
                    <field id="num"/>
                    <field id="customer"/>
                </column>
            </fieldGroup>
            <vbox spacing="true">
                <button caption="Select customer from lookup screen"
                        invoke="selectCustomerFromLookupScreen"/>
                <button caption="Select customer from simple screen"
                        invoke="selectCustomerFromSimpleScreen"/>
            </vbox>
        </hbox>
        <groupBox id="orderLinesBox"
                  caption="msg://com.company.sample.entity/Order.orderLines">
            <table id="orderLinesTable"
                   height="100%"
                   width="100%">
                <actions>
                    <action id="addOrderLine"
                            caption="Add"
                            invoke="addOrderLine"/>
                    <action id="edit"
                            openType="DIALOG"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="product"/>
                    <column id="quantity"/>
                </columns>
                <rows datasource="orderLinesDs"/>
                <buttonsPanel>
                    <button action="orderLinesTable.addOrderLine"/>
                    <button action="orderLinesTable.edit"/>
                    <button action="orderLinesTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
