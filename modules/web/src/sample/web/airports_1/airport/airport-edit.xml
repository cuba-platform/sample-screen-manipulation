<window xmlns="http://schemas.haulmont.com/cuba/window.xsd" caption="msg://editCaption"
        class="sample.web.airports_1.airport.AirportEdit" datasource="airportDs" focusComponent="fieldGroup"
        messagesPack="sample.web.airports_1.airport">
    <dsContext>
        <datasource id="airportDs" class="sample.entity.airports.Airport" view="airport-terminals-meetingPoints-view">
            <collectionDatasource id="terminalsDs" property="terminals">
                <collectionDatasource id="meetingPointsDs" property="meetingPoints"/>
            </collectionDatasource>
        </datasource>
    </dsContext>
    <dialogMode height="600" width="800"/>
    <layout expand="terminalsBox" spacing="true">
        <fieldGroup id="fieldGroup" datasource="airportDs">
            <column width="250px">
                <field id="name"/>
            </column>
        </fieldGroup>
        <groupBox id="terminalsBox" caption="msg://sample.entity.airports/Airport.terminals" expand="terminalsTable">
            <table id="terminalsTable" width="100%">
                <actions>
                    <action id="create"/>
                    <action id="edit"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="name"/>
                </columns>
                <rows datasource="terminalsDs"/>
                <buttonsPanel>
                    <button action="terminalsTable.create"/>
                    <button action="terminalsTable.edit"/>
                    <button action="terminalsTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions" screen="editWindowActions"/>
    </layout>
</window>
