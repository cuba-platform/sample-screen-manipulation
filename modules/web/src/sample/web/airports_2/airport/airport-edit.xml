<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd" caption="msg://editCaption"
        class="sample.web.airports_2.airport.AirportEdit" datasource="airportDs" focusComponent="fieldGroup"
        messagesPack="sample.web.airports_2.airport">
    <dsContext>
        <datasource id="airportDs" class="sample.entity.airports.Airport" view="_local"/>
        <collectionDatasource id="terminalsDs" class="sample.entity.airports.Terminal" view="_local">
            <query>
                <![CDATA[select e from sample$Terminal e
where e.airport.id = :ds$airportDs]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600" width="800"/>
    <layout expand="terminalsTable" spacing="true">
        <fieldGroup id="fieldGroup" datasource="airportDs">
            <column width="250px">
                <field id="name"/>
            </column>
        </fieldGroup>
        <table id="terminalsTable" width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
                <action id="refresh"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rows datasource="terminalsDs"/>
            <buttonsPanel>
                <button action="terminalsTable.create"/>
                <button action="terminalsTable.edit"/>
                <button action="terminalsTable.remove"/>
                <button action="terminalsTable.refresh"/>
            </buttonsPanel>
        </table>
        <frame id="windowActions" screen="extendedEditWindowActions"/>
    </layout>
</window>
