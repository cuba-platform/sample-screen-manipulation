<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd" caption="msg://editCaption"
        class="sample.web.airports_2.terminal.TerminalEdit" datasource="terminalDs" focusComponent="fieldGroup"
        messagesPack="sample.web.airports_2.terminal">
    <dsContext>
        <datasource id="terminalDs" class="sample.entity.airports.Terminal" view="terminal-meetingPoints-notes-view">
            <collectionDatasource id="meetingPointsDs" property="meetingPoints">
                <collectionDatasource id="notesDs" property="notes"/>
            </collectionDatasource>
        </datasource>
    </dsContext>
    <dialogMode height="600" width="800"/>
    <layout expand="meetingPointsBox" spacing="true">
        <fieldGroup id="fieldGroup" datasource="terminalDs">
            <column width="250px">
                <field id="name"/>
            </column>
        </fieldGroup>
        <groupBox id="meetingPointsBox" caption="msg://sample.entity.airports/Terminal.meetingPoints" expand="meetingPointsTable">
            <table id="meetingPointsTable" width="100%">
                <actions>
                    <action id="create"/>
                    <action id="edit"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="name"/>
                </columns>
                <rows datasource="meetingPointsDs"/>
                <buttonsPanel>
                    <button action="meetingPointsTable.create"/>
                    <button action="meetingPointsTable.edit"/>
                    <button action="meetingPointsTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions" screen="editWindowActions"/>
    </layout>
</window>
